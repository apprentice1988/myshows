<!doctype html>
<html>
  <head>
		<title>Game</title>
		<style>
			body {
				background-color: black;
			}	
		</style>
	</head>
	<body onload='setup();'>
		<div id='gameCanvas'></div>
		<%= javascript_include_tag 'three.min' %>
		<%= javascript_include_tag "keyboard" %>
		<%= javascript_include_tag "games_with_threejs" %>
		<div id='scoreboard'>
			<h1 id='scores'>0-0</h1>
			<h1 id='title'>3D PONG</h1>
			<h2 id='winnerBoard'>First to 7 wins!</h2>
			<h3>A - move left
			<br>D - move right</h3>
		</div>
	</body>
</html>